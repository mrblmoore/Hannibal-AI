<?xml version="1.0" encoding="utf-8" ?>
<Prefab>
    <Window>
        <Widget WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent">
            <Children>
                <ListPanel WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" 
                          VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Children>
                        <!-- API Settings -->
                        <TextWidget Text="API Settings" WidthSizePolicy="StretchToParent" />
                        <EditableTextWidget Text="@APIKey" Hint="API Key" />
                        <DropdownWidget SelectedIndex="@LogLevel" DataSource="{LogLevels}" />

                        <!-- Battle Analysis -->
                        <TextWidget Text="Battle Analysis" WidthSizePolicy="StretchToParent" />
                        <NumericWidget DataSource="{UpdateInterval}" MinValue="1" MaxValue="30" />
                        <CheckboxWidget IsSelected="@TerrainAnalysis" Text="Enable Terrain Analysis" />
                        <CheckboxWidget IsSelected="@WeatherAnalysis" Text="Enable Weather Analysis" />
                        <CheckboxWidget IsSelected="@FormationAnalysis" Text="Enable Formation Analysis" />

                        <!-- Debug Settings -->
                        <TextWidget Text="Debug Settings" WidthSizePolicy="StretchToParent" />
                        <CheckboxWidget IsSelected="@EnableDebugMode" Text="Enable Debug Mode" />
                        <CheckboxWidget IsSelected="@SaveBattleSnapshots" Text="Save Battle Snapshots" />
                        <CheckboxWidget IsSelected="@DetailedLogging" Text="Enable Detailed Logging" />
                        <CheckboxWidget IsSelected="@SaveReplayData" Text="Save Replay Data" />

                        <!-- Save Button -->
                        <ButtonWidget Command.Click="ExecuteSave" Text="Save Settings" />
                    </Children>
                </ListPanel>
            </Children>
        </Widget>
    </Window>
</Prefab> 